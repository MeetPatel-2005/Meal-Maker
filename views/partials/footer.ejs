<!-- Popup Modal -->
<div id="popup" class="popup" style="display: none;">
  <div class="popup-content">
    <p id="popup-message">Thank you for subscribing and becoming part of MealMaker!<br>You will now receive frequent updates.</p>
    <button onclick="closePopup()">Close</button>
  </div>
</div>

<!-- Add this JavaScript -->
<script>
function subscribeNewsletter() {
  const emailInput = document.getElementById('newsletterEmail').value.trim();
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  const popup = document.getElementById('popup');
  const popupMessage = document.getElementById('popup-message');

  if (emailInput === '') {
    popupMessage.innerHTML = '❌ Please enter your email.';
    popup.style.display = 'flex';
    return;
  }

  if (!emailRegex.test(emailInput)) {
    popupMessage.innerHTML = '❌ Please enter a valid email address (e.g., user@example.com).';
    popup.style.display = 'flex';
    return;
  }

  // Success message
  popupMessage.innerHTML = '✅ Thank you for subscribing and becoming part of MealMaker!<br>You will now receive frequent updates.';
  popup.style.display = 'flex';
}

function closePopup() {
  document.getElementById('popup').style.display = 'none';
  document.getElementById('newsletterEmail').value = ''; // clear input
}
</script>
